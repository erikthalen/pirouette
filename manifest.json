{
	"manifest_version": 2,
	
	"name": "Pirouette",
	"description": "Spin your tab like a ballerina",
	"version": "1.0",
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon/Oval.png",
     	"32": "icon/Oval@2x.png",
     	"48": "icon/Oval@3x.png",
     	"128": "icon/Oval@8x.png"
		}
	},
	"icons": {
		"16": "icon/Oval.png",
    "32": "icon/Oval@2x.png",
    "48": "icon/Oval@3x.png",
    "128": "icon/Oval@8x.png"
	},
	"permissions": [
		"activeTab"
	],
	"run_at": "document_start",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["slider.js", "content.js"]
		}
	]
}
